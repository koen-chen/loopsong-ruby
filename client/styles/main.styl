			position: absolute;
			bottom: 0;
			left: 34px;
			display: block;
			width: 12px;
			height: 12px;
			background: url(../images/nav_active.png) no-repeat 0 0
		}
	}


	//专辑列表 
	.albumList {
		float: left
		margin-top: 20px
		width: 100%

		li {
			position: relative
			width: 200px
			height: 240px
			margin: 18px
			float: left
		}

		.sleeve {
			display: block
			position: absolute
			width: 200px
			height: 39px
			background: url(../images/sleeve.png) no-repeat 0 0
		}

		.cover { 
			position: relative
			display: block
			width: 200px
			height: 200px
		}

		.shine {
			width: 100%
			height: 100%
			position: absolute
			background: url(../images/shine.png) no-repeat 0 0
		}

		.title, .artist {
			width: 100%
			text-align: center
		}

		.title a {
			display: block
			max-height: 28px
			line-height: 16px
			overflow: hidden
			padding: 5px 0
			color: $mainColor
			text-shadow: 0 0 10px #fff

			&:hover {
				box-shadow: inset 0 1px 6px rgba(0,0,0,0.4)
				background: $mainColor
			} 
		}

		.title:hover a { 
			color: #fff
		}

		.albumMetadata {
			display: none
		}
	}
}

