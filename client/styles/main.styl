@import "reset"

box-sizing(args) {
	-webkit-box-sizing: args
  	-moz-box-sizing: args
  	-o-box-sizing: args
  	-ms-box-sizing: args
  	box-sizing: args
}
box-shadow(args) {
	-webkit-box-shadow: args
	-moz-box-shadow: args
	-o-box-shadow: args
	-ms-box-shadow: args
	box-shadow: args
}

$mainColor = #f47723
$textColor = #666
$bg = url(../images/bg.png) repeat 0 0

html, body { 
	width: 100%
	height: 100%
}  

body {
	font: 12px Helvetica,Arial,sans-serif
	color: $textColor
	background: url(../images/body_bg.png) repeat 0 0
	
	a, button {
		color: $textColor
	}
	button {
		display: block
	}
}

.header {
	position: fixed
	top: 0
	width: 100%
	height: 50px
	background: $bg
	border-top: 2px solid $mainColor
	box-shadow: 0 0px 4px #bfbfbf
	z-index: 100

	.headerInner {
		position: relative
		width: 960px
		margin: 0 auto
	}

	.logo a {
		width: 260px
		height: 80px
		position: absolute
		top: 0px
		left: 50%
		margin-left: -130px
		background: url(../images/logo.png) no-repeat center center
		text-indent: -9999px
	}

	.searchForm {
		position: absolute
		width: auto
		height: auto
		left: 65px
		top: 18px

		input {
			width: 80px
			height: 20px
			padding: 0 20px 0 3px
			border: 1px solid #bfbfbf
			color: $textColor
			background: transparent
		}

		.submitBtn {
			width: 14px
			height: 14px
			position: absolute
			right: 3px
			top: 50%
			margin-top: -7px
			background: url(../images/search_btn.png) no-repeat center center
		}
	}

	//音乐风格列表
	.styleList {
		position: absolute
		top: 13px
		left: 20px
		width: auto
		height: auto

		.styleListBtn {
			width: 30px
			height: 30px
			background: url(../images/list_btn.png) no-repeat center center
			text-indent: -9999px
		}

		.styleListBtn.active {
			background: url(../images/list_active_btn.png) no-repeat center center
		}

		> ul {
			display: none 
			background: $bg
			border: 1px solid #ddd
			margin-top: 5px 

			li {
				position: relative

				&:hover {
					> .name {
						background: $mainColor
						color: #fff
					}

					> .total {
						background: #fff
						color: #333
					}
				}
			}	

			.subStyle {
				display: none
				position: absolute
				left: 100px
				top: 0
				background: $bg
				border: 1px solid #ddd
			}

			.name {
				display: block
				width: 80px
				padding: 6px 10px
			}

			.total { 
				position: absolute
				top: 6px
				right: 5px
				padding: 0 2px
				border: 1px solid #ddd
				border-radius: 10px
				background: #dfdfdf
				opacity: 0.8
				font-size: 11px
			}
		}
	}
	
	.loginBtn, .logoutBtn, .adminBtn {
		position: absolute
		right: 15px
		top: 15px
		width: 40px
		padding: 5px
		text-align: center

		&:hover { 
			color: $mainColor
		}
	}
	.adminBtn {
		right: 60px
	}
}
.main {
	position: relative
	width: 960px
	height: 100%
	margin: 100px auto 0
	
	//排序按钮
	.navBar {
		position: relative
		width: 244px
		height: auto
		margin: 40px auto 0
		padding-bottom: 6px;

		.sortNav {
			position: relative
			height: 30px
			padding-bottom: 6px
			border-bottom: 1px solid $mainColor
			

			li {
